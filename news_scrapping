import requests # for html files
from bs4 import BeautifulSoup
import speech_recognition as sr
import pyttsx3
engine = pyttsx3.init('sapi5')
voices = engine.getProperty('voices')
engine.setProperty('voice', voices[0].id) #0 stands for male voice
def speak(audio):
    engine.say(audio)
    engine.runAndWait()
def takeCommand():
    r = sr.Recognizer()
     
    with sr.Microphone() as source:
         
        print("Listening...")
        r.pause_threshold = 1
        audio = r.listen(source)
  
    try:
        print("Recognizing...")   
        query = r.recognize_google(audio, language ='en-in')
        print("usern said -->", query)
  
    except Exception as e:
        print(e)   
        print("Unable to Recognize your voice.") 
        return "None"   
    
    return query 
def news():
    l = []
    url='https://www.bbc.com/news' # any news portal ,in this case 'BBC'
    response = requests.get(url) # accesing url and creating an object

    soup = BeautifulSoup(response.text, 'html.parser') # pulling HTTP data from the internet
    headlines = soup.find_all('h3') # iterates through object(response) and printing it as a string

    hed = headlines[0:10] # printing the top 10 headlines
    
    for x in hed:
        req = x.text.strip()
        print(req)#printing stripped data
        speak(req)
        
def news_speak():
    while True:
        query = takeCommand()
        if "read the news" in query or "latest news" in query:
            try:
                speak("Alright, here's the latest news")
                news()
                break
            except Exception as e:
                print(e)
                speak("Sorry, I am not able to read the news right now")


news_speak()